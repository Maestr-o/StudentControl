<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/bottomNavigationFragment">

    <fragment
        android:id="@+id/bottomNavigationFragment"
        android:name="com.nstuproject.studentcontrol.fragment.BottomNavigationFragment"
        android:label="@string/timetable"
        tools:layout="@layout/fragment_bottom_navigation">
        <action
            android:id="@+id/action_bottomNavigationFragment_to_editLessonFragment"
            app:destination="@id/editLessonFragment" />
    </fragment>
    <fragment
        android:id="@+id/editLessonFragment"
        android:name="com.nstuproject.studentcontrol.fragment.EditLessonFragment"
        android:label="@string/edit"
        tools:layout="@layout/fragment_edit_lesson">
        <action
            android:id="@+id/action_editLessonFragment_to_datePickerFragment"
            app:destination="@id/datePickerFragment" />
        <action
            android:id="@+id/action_editLessonFragment_to_timePickerFragment"
            app:destination="@id/timePickerFragment" />
    </fragment>
    <dialog
        android:id="@+id/datePickerFragment"
        android:name="com.nstuproject.studentcontrol.fragment.DatePickerFragment"
        android:label="@string/choose_date" />
    <dialog
        android:id="@+id/timePickerFragment"
        android:name="com.nstuproject.studentcontrol.fragment.TimePickerFragment"
        android:label="@string/choose_time" />
</navigation>